<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">webp_form.webp_form_data_source</item>
            <item name="deps" xsi:type="string">webp_form.webp_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Webp settings</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">webp_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="convert_now" class="Unexpected\Webp\Block\Adminhtml\Conversion\ConvertNowButton"/>
            <button name="cron" class="Unexpected\Webp\Block\Adminhtml\Conversion\CronButton"/>
            <button name="save" class="Unexpected\Webp\Block\Adminhtml\Conversion\SaveButton"/>
        </buttons>
        <namespace>webp_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>webp_form.webp_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="webp_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <!--        <settings>-->
        <!--            <validateUrl path="catalog/category/validate"/>-->
        <!--            <submitUrl path="catalog/category/save"/>-->
        <!--        </settings>-->
        <dataProvider class="Unexpected\Webp\Model\Conversion\DataProvider" name="webp_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="convert" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Conversion</label>
        </settings>
        <field name="convert" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="component" xsi:type="string">Unexpected_Webp/js/form/element/progressbar</item>
                    <item name="elementTmpl" xsi:type="string">Unexpected_Webp/form/element/progressbar</item>
                    <item name="label" xsi:type="string" translate="true">Convert</item>
                </item>
            </argument>
        </field>
        <field name="convert_extensions" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Extensions</label>
                <dataScope>convert_extensions</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">JPG</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">JPEG</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">PNG</item>
                            </option>
                        </options>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="cron" sortOrder="20">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Cron</label>
        </settings>
        <field name="cron" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">cron</item>
                    <item name="dataScope" xsi:type="string">cron</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Enable</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="boolean">false</map>
                            <map name="true" xsi:type="boolean">true</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="frequency" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Frequency</label>
                <dataScope>frequency</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">Daily</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">Weekly</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">Monthly</item>
                            </option>
                        </options>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <htmlContent name="time">
            <settings>
                <additionalClasses>
                    <class name="admin__field">true</class>
                </additionalClasses>
            </settings>
            <block class="Unexpected\Webp\Block\Adminhtml\Conversion\Time" name="time"/>
        </htmlContent>
        <field name="cron_extensions" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Extensions</label>
                <dataScope>cron_extensions</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">JPG</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">JPEG</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">PNG</item>
                            </option>
                        </options>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="clear" sortOrder="30">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Clear</label>
        </settings>
        <field name="clear" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="component" xsi:type="string">Unexpected_Webp/js/form/element/progressbar</item>
                    <item name="elementTmpl" xsi:type="string">Unexpected_Webp/form/element/progressbar</item>
                    <item name="label" xsi:type="string" translate="true">Clear</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>