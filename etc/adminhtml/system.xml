<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="unexpected" translate="label" sortOrder="100000">
            <label>Unexpected</label>
        </tab>
        <section id="webp" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>Webp</label>
            <tab>unexpected</tab>
            <resource>Unexpected_Webp::webp_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>General</label>
                <field id="enable" translate="label" type="checkbox" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enable</label>
                    <frontend_model>Unexpected\Webp\Block\Adminhtml\System\Config\ToggleSwitch</frontend_model>
                </field>
            </group>
            <group id="backend" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Backend</label>
                <field id="extension" translate="label" type="multiselect" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Extension</label>
                    <source_model>Unexpected\Webp\Model\Config\Source\Extension</source_model>
                    <can_be_empty>0</can_be_empty>
                </field>
                <field id="type" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Convertion type</label>
                    <source_model>Unexpected\Webp\Model\Config\Source\Type</source_model>
                </field>
                <field id="convert" translate="label" type="button" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Convert to Webp</label>
                    <frontend_model>Unexpected\Webp\Block\Adminhtml\System\Config\Button</frontend_model>
                </field>
                <field id="progressbar" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Progress</label>
                    <frontend_model>Unexpected\Webp\Block\Adminhtml\System\Config\ProgressBar</frontend_model>
                </field>
            </group>
            <group id="advanced" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Advanced</label>
                <field id="quality" translate="label" type="checkbox" sortOrder="10" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Quality</label>
                    <frontend_model>Unexpected\Webp\Block\Adminhtml\System\Config\SliderRange</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
